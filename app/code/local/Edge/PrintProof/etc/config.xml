<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <Edge_PrintProof>
            <version>1.0.0</version>
        </Edge_PrintProof>
    </modules>
    <global>
        <blocks>
            <printproof>
                <class>Edge_PrintProof_Block</class>
            </printproof>
        </blocks>
        <models>
            <printproof>
                <class>Edge_PrintProof_Model</class>
                <resourceModel>printproof_resource</resourceModel>
            </printproof>
            <printproof_resource>
                <class>Edge_PrintProof_Model_Resource</class>
                <entities>
                    <proof>
                        <table>printproof</table>
                    </proof>
                </entities>
            </printproof_resource>
        </models>
        <helpers>
            <printproof>
                <class>Edge_PrintProof_Helper</class>
            </printproof>
        </helpers>
        <resources>
            <printproof_setup>
                <setup>
                    <module>Edge_PrintProof</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </printproof_setup>
        </resources>
        <template>
            <email>
                <printproof_email_notification module="printproof">
                    <label>Order Proof Email Notification</label>
                    <file>printproof_email_notification.html</file>
                    <type>html</type>
                </printproof_email_notification>
            </email>
        </template>
    </global>
    <frontend>
        <routers>
            <printproof>
                <use>standard</use>
                <args>
                    <module>Edge_PrintProof</module>
                    <frontName>printproof</frontName>
                </args>
            </printproof>
        </routers>
        <layout>
            <updates>
                <printproof>
                    <file>printproof.xml</file>
                </printproof>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <printproofadmin>
                <use>admin</use>
                <args>
                    <module>Edge_PrintProof</module>
                    <frontName>printproofadmin</frontName>
                </args>
            </printproofadmin>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <printproof>
                    <file>printproof.xml</file>
                </printproof>
            </updates>
        </layout>
    </adminhtml>
</config>